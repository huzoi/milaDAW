#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define N 3


void generar_matriu(int matriu[N][N])
{
    srand(time(NULL));

    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            matriu[i][j] = rand() % 10;
        }
    }

    printf("Matriu generada:\n");
    for (int i = 0; i < N; i++)
    {
        for (int j = 0; j < N; j++)
        {
            printf("%d ", matriu[i][j]);
        }
        printf("\n");
    }
}


